<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="store"
            type="com.study.restaurant.model.Store" />

        <variable
            name="storeSpec"
            type="com.study.restaurant.model.StoreSpec" />

        <variable
            name="vm"
            type="com.study.restaurant.viewmodel.RestaurantDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:onClick="@{vm::clickImage}"
                        android:padding="5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:onClick="@{vm::clickImage}"
                        android:padding="5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:onClick="@{vm::clickImage}"
                        android:padding="5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:onClick="@{vm::clickImage}"
                        android:padding="5dp"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:onClick="@{vm::clickImage}"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#55000000"
                            android:gravity="center"
                            android:text="전체 사진 보기"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@{store.getName}"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">


                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_common_restaurant_view" />

                <TextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@{store.getHit}"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_common_restaurant_review" />

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@{store.getReview_count}"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_common_restaurant_wannago_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@{store.getScore}"
                android:textColor="@color/orange"
                android:textSize="35sp" />

        </RelativeLayout>

    </LinearLayout>
</layout>