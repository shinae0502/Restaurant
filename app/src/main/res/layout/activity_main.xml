<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.study.restaurant.viewmodel.MainActivityViewModel"/>
    </data>
<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigationLayout"
        app:onPageChangeListener="@{vm.onPageChangeListener}"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        >

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:enabled="@{vm.menuEanbled}"
            android:onClick="@{vm::clickFindRestaurant}"
            app:selected="@{vm.menu1}">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_ic_common_find" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛집찾기"
                android:textColor="@color/selector_main_menu"
                android:textSize="12sp" />
            </LinearLayout>

            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.menuEanbled ? View.GONE : View.VISIBLE}"
                android:background="#88eeeeee" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:enabled="@{vm.menuEanbled}"
            android:onClick="@{vm::clickMangoPick}"
            app:selected="@{vm.menu2}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_ic_common_picks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="망고픽"
                android:textColor="@color/selector_main_menu"
                android:textSize="12sp" />
            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.menuEanbled ? View.GONE : View.VISIBLE}"
                android:background="#88eeeeee" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:onClick="@{vm::clickRegister}"
            app:selected="@{vm.menu3}"
            android:orientation="vertical">

            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.menuEanbled ? View.GONE : View.VISIBLE}"
                android:background="#88eeeeee" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/selector_btn_find_plus" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:enabled="@{vm.menuEanbled}"
            android:onClick="@{vm::clickNews}"
            app:selected="@{vm.menu4}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_ic_common_feeds" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소식"
                android:textColor="@color/selector_main_menu"
                android:textSize="12sp" />
            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.menuEanbled ? View.GONE : View.VISIBLE}"
                android:background="#88eeeeee" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:enabled="@{vm.menuEanbled}"
            android:onClick="@{vm::clickMyInformation}"
            app:selected="@{vm.menu5}"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_ic_common_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내정보"
                android:textColor="@color/selector_main_menu"
                android:textSize="12sp" />
            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.menuEanbled ? View.GONE : View.VISIBLE}"
                android:background="#88eeeeee" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</layout>